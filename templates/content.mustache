{{!
    @template assignsubmission_collabora/content

    Displays etherpad content

    Example context (json):
    {
        "id" : 46876,
        "legacy" : 1,
        "viewurl" : "https://nodomain.local",
        "filename" : "example.docx",
        "name" : "example",
        "framewidth" : "900px",
        "frameheight" : "500px"
    }

}}
<a href="#"
   title="{{#str}}fullscreen, mod_collabora{{/str}}"
   class="text-decoration-none text-primary collaboramodal"
   data-toggle="modal"
   data-target="#collaboramodal_{{id}}"
>
    <span class="fa-stack" title="{{title}}">
        <i class="fa fa-square-o fa-stack-2x"></i>
        <i class="fa fa-expand fa-stack-1x"></i>
    </span>
</a><span class="ml-1">{{filename}}</span>
{{#legacy}}
    {{> mod_collabora/iframe_legacy}}
{{/legacy}}
{{^legacy}}
    {{> mod_collabora/iframe}}
{{/legacy}}
{{> mod_collabora/modal}}

{{#js}}
    require(['assignsubmission_collabora/modal_iframe'], function(mod) {
        mod.init("{{{viewurl}}}", "{{{id}}}");
    });
{{/js}}
